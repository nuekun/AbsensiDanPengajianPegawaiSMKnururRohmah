<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holderKolega"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtKolegaListNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gbrlistKolegaPriview"
        android:layout_alignBottom="@+id/gbrlistKolegaPriview"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/gbrlistKolegaPriview"
        android:gravity="center_horizontal|center_vertical"
        android:text="Nama"
        android:textColor="@color/browser_actions_bg_grey"
        android:textStyle="bold" />



    <ImageView
        android:id="@+id/gbrlistKolegaPriview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>